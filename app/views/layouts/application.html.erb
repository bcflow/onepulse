<!DOCTYPE html>
<html>
  <head>
    <title>One Pulse</title>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">
    <script src="//use.typekit.net/gwz3jpy.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>
    <script type="text/javascript">
    $(function() {
    $('a[rel*=leanModal]').leanModal({ top : 200, closeButton: ".modal_close" });
    });
    </script>
    <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  </head>
  <body>
    <div id="login">
      <ul class="nav nav-tabs" id="tabContent">
        <li class="active"><a href="#login" data-toggle="tab">Login</a></li>
        <li><a href="#signup" data-toggle="tab">Signup</a></li>
      </ul>
      <div class="tab-pane" id="signup">
        content 0
      </div>
      <div class="tab-pane" id="login">
        content login
      </div>
    </div>
  </div>
  <div class="container" align="center">
    <!-- Alert boxes -->
    <div id="alerts">
      <% if flash[:success] %>
      <div class="alert alert-success" role="alert"><%= flash[:success] %></div>
      <% end %>
      <% if flash[:alert] %>
      <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
      <% end %>
    </div>
    <%= yield %>
  </div>
</body>
</html>