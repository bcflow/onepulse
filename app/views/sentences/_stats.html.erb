<div class="stats-box">
  <div class="stats-header">Stats for:</div>
  <div class="stats-sentence"><%= @sentence.body %></div>
  <hr>
  
  <div class="col-md-12 stats-container">
    <div class="stats-subheader col-md-4"><span class="stats-subheader-stat"><%= @sentence.blips.count %></span><br> total blips</div>
    <div class="stats-subheader col-md-4"><span class="stats-subheader-stat">28</span><br> countries</div>
    <div class="stats-subheader col-md-4"><span class="stats-subheader-stat">45</span><br> cities</div>
  </div>

  <div class="charts-container col-md-12">
    <span class="chart-header">Top Blip per Country</span>    
    <div class="chart"><%= geo_chart Blip.select("*").joins(:users).count, library: {backgroundColor: "transparent", width: 500} %></div>
     <div class="chart">
      <span class="chart-header">Top 10 Blips</span>
      <%= pie_chart @statistics, library: {backgroundColor: "transparent", width: 600} %>
    </div>
      <span class="chart-header">By Gender</span>
      <div class="col-md-5">
        <%= pie_chart @statistics, library: {backgroundColor: "transparent", width: 300} %>
      </div>
      <div class="col-md-2"></div>
      <div class="col-md-5">
        <%= pie_chart @statistics, library: {backgroundColor: "transparent", width: 300} %>
      </div>
  </div>
</div>
